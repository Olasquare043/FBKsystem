@model Executive
@{ 
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class=" rounded-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Executive</li>
                    </ol>
                </nav>
            </div>
        </div>
        <form asp-action="CreateExecutive" method="post" needs-validation> 
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="m-3">Basic Information <small>Carefully fill the form below...</small> </h4>
                        </div>
                        <div class="card-body">
                            <div class="row m-3">
                                <div class="col-sm-6 ">
                                    <div class="form-group">
                                        <div class="form-outline">
                                            <input type="text" class="form-control" id="MatricNo" asp-for="MemberId" required>
                                            <label class="form-label" for="MatricNo">Matric No</label>
                                            <div class="invalid-feedback">Not a member of NACOS</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 ">
                                    <div class="form-group">
                                        <div class="form-outline">
                                            <input type="text" class="form-control" id="Tenure" asp-for="Tenure" required>
                                            <label class="form-label" for="Tenure">Tenure(e.g 2022)</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-6 ">
                                    <div class="form-group">
                                        <select class="form-control show-tick" asp-for="Level" required>
                                            <option value="">-- Level --</option>
                                            <option>100</option>
                                            <option>200</option>
                                            <option>300</option>
                                            <option>400</option>
                                            <option>500</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <select class="form-control show-tick" asp-for="Position" required>
                                            <option value="">-- Position --</option>
                                            <option>President</option>
                                            <option>Vice President</option>
                                            <option>Gen. Secretary</option>
                                            <option>Fin. Secretary</option>
                                            <option>Social Director</option>
                                            <option>Sport Director</option>
                                            <option>PRO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-5 m-3">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-raised btn-outline-info form-control">Submit</button>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <a class="btn btn-raised btn-warning form-control">Cancel</a>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-success" onclick="alertshow()">click me</a>
                            <script>
                                function alertshow() {
                                    $.bootstrapGrawl("successfull Register");
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal fade" id="logoutModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Please Confirm!</h3>
                    <span class="close" data-dismiss="modal">&times;</span>
                </div>
                <div class="modal-body">
                    <p> Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer">
                    <div class="flex-row justify-content-center">
                        <a class="btn btn-danger">Yes</a>
                        <a class="btn btn-info"> No</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>